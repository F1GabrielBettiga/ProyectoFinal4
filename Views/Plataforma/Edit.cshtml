@model ProyectoFinal4.Models.Plataforma

@{
    ViewData["Title"] = $"Editar - {Model.Nombre}";
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/Plataforma/edit.css" asp-append-version="true" />
}

<div class="container-fluid d-flex flex-column min-vh-100 align-items-center p-3 pt-5">

    <div class="w-100" style="max-width: 900px;">

        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb" class="mb-3">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item">
                    <a asp-controller="Plataforma" asp-action="Index"
                       class="text-decoration-none text-secondary d-inline-flex align-items-center gap-2">
                        <span class="material-symbols-outlined fs-6">home</span>
                        Gestión de Plataformas
                    </a>
                </li>
                <li class="breadcrumb-item active text-white" aria-current="page">
                    Editar Plataforma
                </li>
            </ol>
        </nav>

        <div class="glass-panel p-4 p-md-5 rounded-4 shadow">

            <div class="d-flex align-items-center gap-3 mb-4 pb-2">
                <div class="icon-box flex-shrink-0">
                    <span class="material-symbols-outlined fs-3">edit_square</span>
                </div>

                <div>
                    <h1 class="h4 fw-bold mb-1 text-white">Editar Plataforma - @Model.Nombre</h1>
                    <p class="mb-0 text-secondary small">Actualice la información de la plataforma a continuación.</p>
                </div>
            </div>

            <form asp-action="Edit" method="post">
                <div class="row g-4">

                    <div class="col-lg-8">
                        <div class="form-floating mb-3">
                            <input asp-for="Nombre" class="form-control" placeholder="Nombre" />
                            <label asp-for="Nombre"></label>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Url" class="form-control" placeholder="Sitio Web" />
                            <label asp-for="Url"></label>
                        </div>

                        <div class="form-floating mb-1">
                            <input asp-for="LogoUrl" class="form-control" placeholder="URL Logo" id="platformLogoUrl" />
                            <label asp-for="LogoUrl"></label>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="d-flex flex-column align-items-center align-items-lg-start h-100">
                            <span class="text-uppercase fw-semibold text-secondary small mb-2 d-block w-100 text-center text-lg-start"
                                  style="font-size: 0.75rem; letter-spacing: 1px;">
                                Vista Previa
                            </span>

                            <div class="preview-container rounded-4 w-100 shadow-sm mb-3">
                                <div class="preview-bg-grid"></div>

                                <img alt="Platform Logo Preview"
                                     id="logoPreview"
                                     src="@Model.LogoUrl" />
                            </div>
                        </div>
                    </div>

                </div>

                <div class="d-flex justify-content-end gap-2 mt-4 pt-4 border-top border-secondary-subtle">
                    <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2 btn-cancel">Cancelar</a>

                    <button class="btn btn-primary px-4 py-2 d-flex align-items-center gap-2 shadow-sm" type="submit">
                        <span class="material-symbols-outlined fs-5">save</span>
                        Editar Plataforma
                    </button>
                </div>
            </form>
        </div>

    </div>
</div>

