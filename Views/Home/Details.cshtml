@model ProyectoFinal4.Models.Pelicula

@{

    ViewData["Title"] = $"Detalles - {Model.Titulo}";
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/Pelicula/details.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/pages/Home/_CreateReview.css" asp-append-version="true" />
}


<main class="container py-5">

    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Inicio</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Titulo</li>
        </ol>
    </nav>

    <div class="row g-5">

        <!-- Poster -->
        <div class="col-lg-4">
            <div class="poster-container position-sticky" style="top: 100px;">
                <img src=@Model.PosterUrlPortada
                     class="img-fluid w-100"
                     alt="Interstellar Poster">
            </div>
        </div>

        <!-- Detalle -->
        <div class="col-lg-8">
            <div class="glass-card">

                <!-- Header -->
                <div class="mb-4">
                    <div class="d-flex flex-wrap align-items-center gap-3 mb-2">
                        <span class="genre-badge">@Model.Genero.Descripcion</span>

                        <div class="text-muted small fw-semibold d-flex align-items-center gap-1">
                            <span class="material-symbols-outlined fs-6">schedule</span>
                            @if (@Model.MinutosDuracion >= 60)
                            {
                                @(@Model.MinutosDuracion / 60)

                                @:h
                            }
                            @(@Model.MinutosDuracion % 60)m
                        </div>

                        <div class="text-muted small fw-semibold d-flex align-items-center gap-1">
                            <span class="material-symbols-outlined fs-6">calendar_month</span> @Model.FechaLanzamiento.Year
                        </div>
                    </div>

                    <h1 class="display-4 movie-title text-white mb-3">@Model.Titulo</h1>

                    <div class="d-flex align-items-center gap-3">
                        <div class="rating-stars">
                            <span class="material-symbols-outlined" style="font-variation-settings:'FILL' 1">star</span>
                            <span class="material-symbols-outlined" style="font-variation-settings:'FILL' 1">star</span>
                            <span class="material-symbols-outlined" style="font-variation-settings:'FILL' 1">star</span>
                            <span class="material-symbols-outlined" style="font-variation-settings:'FILL' 1">star</span>
                            <span class="material-symbols-outlined" style="font-variation-settings:'FILL' 0">star</span>
                            <span class="ms-2 fw-bold text-white fs-5">8.6</span>
                        </div>


                    </div>
                </div>

                <!-- Sinopsis -->
                <div class="mb-5">
                    <h3 class="section-title">
                        <span class="material-symbols-outlined">description</span>
                        Sinopsis
                    </h3>

                    <p class="text-muted" style="font-size: 1.05rem; line-height: 1.6;">
                        @Model.Sinopsis
                    </p>
                </div>

                <!-- Plataforma -->
                <div class="mb-5">
                    <h3 class="section-title">
                        <span class="material-symbols-outlined">smart_display</span>
                        Disponible en
                    </h3>

                    <a href="@Model.Plataforma.Url" class="platform-card">
                        <div class="platform-logo-box">
                            <img src="@Model.Plataforma.LogoUrl"
                                 class="platform-logo-img"
                                 alt="Logo @Model.Plataforma.Nombre" />
                        </div>

                        <div>
                            <div class="fw-bold d-flex align-items-center gap-1">
                                @Model.Plataforma.Nombre
                                <span class="material-symbols-outlined fs-6">open_in_new</span>
                            </div>

                        </div>
                    </a>
                </div>

                <!-- Reseñas -->
                <div class="mb-5">
                    <h3 class="section-title">
                        <span class="material-symbols-outlined">rate_review</span>
                        Reseñas
                    </h3>

                    <!-- Reseña 1 -->
                    @foreach (var item in Model.Listareviews)
                    {
                        <div class="review-card">
                            <div class="d-flex gap-3 align-items-start">
                                <img src=@item.Usuario.ImagenUrlPerfil
                                class="user-avatar"
                                alt="Imagen Usuario">

                                <div class="flex-grow-1">
                                    <div class="d-flex justify-content-between mb-1">
                                        <div>
                                        <h5 class="mb-0 fs-6 fw-bold">@item.Usuario.Nombre @item.Usuario.Apellido </h5>
                                            <span class="text-muted small">@item.FechaReview.ToString("dd/MM/yyyy")</span>
                                        </div>
                                        <div class="rating-stars">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                if (i <= item.Rating)
                                                {

                                                    <span class="material-symbols-outlined" style="font-variation-settings:'FILL' 1">star</span>
                                                }
                                                else
                                                {
                                                    <span class="material-symbols-outlined" style="font-variation-settings:'FILL' 0">star</span>
                                                }
                                            }
                                            
                                        </div>
                                    </div>

                                    <p class="text-muted small mb-0">
                                        @item.Comentario
                                    </p>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Acciones -->
                <div class="row g-3">
                    <div class="col-sm-6">
                        <button class="btn btn-primary w-100 d-flex align-items-center justify-content-center gap-2" type="button"
                                data-bs-toggle="modal" data-bs-target="#createReviewModal">
                            <span class="material-symbols-outlined">edit</span>Crear Reseña
                        </button>
                        
                    </div>

                    <div class="col-sm-6">
                        <a asp-action="Index"
                           class="btn btn-outline-secondary w-100 d-flex align-items-center justify-content-center gap-2">
                            <span class="material-symbols-outlined">arrow_back</span>
                            Volver
                        </a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</main>


