@{
    ViewData["Title"] = "Acceso denegado";
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/Usuario/accessDenied.css" asp-append-version="true" />
}

<div class="bg-pattern"></div>

<div class="d-flex align-items-center justify-content-center min-vh-100 p-4 access-denied-page">
    <div class="glass-panel access-denied-panel rounded-4 p-5 shadow text-center">
        <div class="icon-container">
            <span class="material-symbols-outlined icon-large">lock_person</span>
        </div>

        <h1 class="fw-bold text-white mb-3">No tienes acceso a esta página</h1>

        <p class="text-secondary-custom mb-5 fs-5 fw-light">
            Parece que no tienes los permisos necesarios para ver este contenido.
            Si crees que esto es un error, contacta a un administrador.
        </p>

        <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center">
            <button type="button"
                    class="btn btn-outline-light d-inline-flex align-items-center justify-content-center px-4 py-2"
                    onclick="window.history.back()">
                <span class="material-symbols-outlined me-2 fs-5">arrow_back</span>
                Volver atrás
            </button>

            <a asp-controller="Home" asp-action="Index"
               class="btn btn-primary d-inline-flex align-items-center justify-content-center px-4 py-2">
                <span class="material-symbols-outlined me-2 fs-5">home</span>
                Ir al inicio
            </a>
        </div>

        <div class="mt-4 pt-3 border-top border-secondary border-opacity-25">
            <small class="text-secondary opacity-50">Error Code: 403 Forbidden</small>
        </div>
    </div>
</div>

