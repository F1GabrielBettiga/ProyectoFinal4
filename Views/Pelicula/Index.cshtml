@model IEnumerable<ProyectoFinal4.Models.Pelicula>


@{
    ViewData["Title"] = "Gestión de Películas";
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/Pelicula/index.css" asp-append-version="true" />
}

<div class="pelicula-index">

    <div class="container-fluid px-4 pb-5" style="max-width: 1400px;">

        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a class="text-decoration-none text-secondary d-flex align-items-center" href="#">
                        <span class="material-symbols-outlined fs-6 me-1">dashboard</span>
                        Panel de Administración
                    </a>
                </li>
                <li aria-current="page" class="breadcrumb-item active text-white">
                    Gestión de Películas
                </li>
            </ol>
        </nav>

        <!-- Header -->
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3 mb-5">
            <div>
                <h1 class="display-6 fw-bold mb-1">Películas</h1>
                <p class="text-secondary mb-0">
                    Gestioná el catálogo de películas. Agregá títulos, consultá información y organizá tu colección.
                </p>
            </div>

            @*AGREGAR PELICULA*@

            <a asp-action="Create" class="btn btn-primary d-flex align-items-center gap-2 px-4 py-2 fw-medium"><span class="material-symbols-outlined fs-5">add</span> Añadir Película </a>

        </div>

        <!-- Toolbar -->
        <div class="card glass-effect mb-4 rounded-3 border-0">
            <div class="card-body p-4">
                <div class="row g-3">

                    <div class="col-md-5 col-lg-6">
                        <div class="input-group">
                            <span class="input-group-text bg-transparent text-secondary border-end-0">
                                <span class="material-symbols-outlined">search</span>
                            </span>
                            @*FILTRO 1*@
                            <input class="form-control border-start-0 ps-0"
                                   placeholder="Filtrar por título, director o palabra clave..."
                                   type="text" />
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="input-group">
                            <span class="input-group-text bg-transparent text-secondary border-end-0">
                                <span class="material-symbols-outlined">category</span>
                            </span>
                            @*FILTRO 2*@
                            <select class="form-select border-start-0 ps-0">
                                <option selected>All Genres</option>
                                <option>Action</option>
                                <option>Comedy</option>
                                <option>Drama</option>
                                <option>Sci-Fi</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="input-group">
                            <span class="input-group-text bg-transparent text-secondary border-end-0">
                                <span class="material-symbols-outlined">sort</span>
                            </span>
                            @*FILTRO 3*@
                            <select class="form-select border-start-0 ps-0">
                                <option selected>Newest Added</option>
                                <option>Highest Rated</option>
                                <option>Year (Desc)</option>
                                <option>Title (A-Z)</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-md-1 d-grid">
                        <button class="btn btn-outline-secondary d-flex align-items-center justify-content-center"
                                title="Export">
                            <span class="material-symbols-outlined">download</span>
                        </button>
                    </div>

                </div>
            </div>
        </div>

        <!-- Table -->
        <div class="card glass-effect border-0 rounded-3 shadow-sm overflow-hidden">
            <div class="table-responsive">
                <table class="table table-custom table-hover table-borderless mb-0 align-middle w-100">
                    <thead>
                        <tr>
                            <th class="ps-4">Poster</th>
                            <th>Titulo</th>
                            <th>Genero</th>
                            <th>Rating</th>
                            <th>Estreno</th>
                            <th class="text-end pe-4">Accion</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model){
                        <tr class="hover-lift">
                            @*IMAGEN*@
                            <td class="ps-4">
                                <img class="img-thumbnail bg-dark border-secondary p-1 img-poster"
                                     src=@item.PosterUrlPortada />
                            </td>

                            <td>
                                <div class="d-flex flex-column">
                                        @*TITULO*@
                                    <a class="text-white text-decoration-none fw-bold" href="#">
                                            @item.Titulo
                                    </a>
                                </div>
                            </td>

                            <td>
                                    @*GENERO*@
                                <span class="badge badge-soft-primary rounded-pill px-3 fw-normal">
                                        @item.Genero.Descripcion
                                </span>
                            </td>

                            <td>
                                    @*RATING*@
                                <div class="d-flex align-items-center text-warning-custom">
                                    <span class="material-symbols-outlined fs-6" style="font-variation-settings:'FILL' 1">star</span>
                                    <span class="material-symbols-outlined fs-6" style="font-variation-settings:'FILL' 1">star</span>
                                    <span class="material-symbols-outlined fs-6" style="font-variation-settings:'FILL' 1">star</span>
                                    <span class="material-symbols-outlined fs-6" style="font-variation-settings:'FILL' 1">star</span>
                                    <span class="material-symbols-outlined fs-6">star_half</span>
                                    <span class="ms-2 small text-secondary">(8.9)</span>
                                </div>
                            </td>
                                @*ESTRENO*@
                            <td class="text-light">@item.FechaLanzamiento.Year</td>
                                
                            <td class="text-end pe-4">
                                    @*ACCIONES*@
                                <div class="btn-group btn-group-sm">

                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary border-0 text-white-50 btn-icon" title="Editar" ><span class="material-symbols-outlined fs-5">Edit</span></a> |
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary border-0 text-white-50 btn-icon" title="Detalles"><span class="material-symbols-outlined fs-5">visibility</span></a> |
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger border-0 text-danger btn-icon" title="Borrar"><span class="material-symbols-outlined fs-5">delete</span></a>

                                </div>
                            </td>
                        </tr>
                        }
                    </tbody>
                   
                </table>
            </div>
            
            <!-- Footer -->
            <div class="card-footer border-top border-secondary border-opacity-10 bg-transparent py-3">
                <div class="d-flex flex-column flex-md-row justify-content-between align-items-center gap-3">
                    <div class="small text-secondary">
                        Showing <span class="fw-bold text-white">1</span> to
                        <span class="fw-bold text-white">5</span> of
                        <span class="fw-bold text-white">42</span> results
                    </div>

                    <ul class="pagination pagination-sm mb-0">
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                    </ul>
                </div>
            </div>

        </div>
    </div>
</div>