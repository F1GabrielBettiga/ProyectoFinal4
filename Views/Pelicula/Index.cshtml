@model IEnumerable<ProyectoFinal4.Models.Pelicula>

@{
    ViewData["Title"] = "Gestión de Películas";
    var busquedaPelicula = ViewBag.TxtBusqueda ?? "";
    var generoId = ViewBag.GeneroId ?? 0;
    var plataformaId = ViewBag.PlataformaId ?? 0;
}


@section Styles {
    <link rel="stylesheet" href="~/css/pages/Pelicula/index.css" asp-append-version="true" />
}

<div class="pelicula-index">

    <div class="container-fluid px-4 pb-5" style="max-width: 1400px;">

        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a class="text-decoration-none text-secondary d-flex align-items-center" href="#">
                        <span class="material-symbols-outlined fs-6 me-1">dashboard</span>
                        Panel de Administración
                    </a>
                </li>
                <li aria-current="page" class="breadcrumb-item active text-white">
                    Gestión de Películas
                </li>
            </ol>
        </nav>

        <!-- Header -->
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3 mb-5">
            <div>
                <h1 class="display-6 fw-bold mb-1">Películas</h1>
                <p class="text-secondary mb-0">
                    Gestioná el catálogo de películas. Agregá títulos, consultá información y organizá tu colección.
                </p>
            </div>

            @*AGREGAR PELICULA*@

            <a asp-action="Create" class="btn btn-primary d-flex align-items-center gap-2 px-4 py-2 fw-medium"><span class="material-symbols-outlined fs-5">add</span> Añadir Película </a>

        </div>

        <!-- Filtros -->
        <form method="get">


            <div class="glass-card p-4 mb-5 admin-filters">
                <div class="row g-3 align-items-end">

                    <!-- Buscar -->
                    <div class="col-12 col-lg-5">
                        <div class="input-group w-100">
                            <button class="input-group-text glass-input border-end-0 text-secondary" type="submit">
                                <span class="material-symbols-outlined fs-5">search</span>
                            </button>

                            <input name="txtBusqueda"
                                   value="@busquedaPelicula"
                                   class="form-control glass-input border-start-0 ps-0 shadow-none"
                                   placeholder="Buscar películas"
                                   type="text" />
                        </div>
                    </div>

                    <!-- Género -->
                    <div class="col-12 col-md-6 col-lg-3">
                        <select name="generoId"
                                asp-items="ViewBag.GeneroId"
                                onchange="this.form.submit()"
                                class="form-select glass-input shadow-none select-glass w-100">
                        </select>
                    </div>

                    <!-- Plataforma -->
                    <div class="col-12 col-md-6 col-lg-3">
                        <select name="plataformaId"
                                asp-items="ViewBag.PlataformaId"
                                onchange="this.form.submit()"
                                class="form-select glass-input shadow-none select-glass w-100">
                        </select>
                    </div>

                    <!-- Limpiar filtros -->
                    <div class="col-12 col-lg-1 d-flex justify-content-end">
                        <a asp-controller="Pelicula"
                           asp-action="Index"
                           class="btn btn-glass w-100 d-flex align-items-center justify-content-center"
                           title="Limpiar filtros">
                            <span class="material-symbols-outlined fs-5">delete_sweep</span>
                        </a>
                    </div>

                </div>
            </div>
        </form>

        <!-- Table -->
        <div class="card glass-effect border-0 rounded-3 shadow-sm overflow-hidden">
            <div class="table-responsive">
                <table class="table table-custom table-hover table-borderless mb-0 align-middle w-100">
                    <thead>
                        <tr>
                            <th class="ps-4">Poster</th>
                            <th>Titulo</th>
                            <th>Genero</th>
                            <th>Rating</th>
                            <th>Estreno</th>
                            <th class="text-end pe-5">Accion</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="hover-lift">
                                @*IMAGEN*@
                                <td class="ps-4">
                                    <img class="img-thumbnail bg-dark border-secondary p-1 img-poster"
                                         src=@item.PosterUrlPortada />
                                </td>

                                <td>
                                    <div class="d-flex flex-column">
                                        @*TITULO*@
                                        <a class="text-white text-decoration-none fw-bold" href="#">
                                            @item.Titulo
                                        </a>
                                    </div>
                                </td>

                                <td>
                                    @*GENERO*@
                                    <span class="badge badge-soft-primary rounded-pill px-3 fw-normal">
                                        @item.Genero.Descripcion
                                    </span>
                                </td>

                                <td>
                                    @*RATING*@
                                    <div class="d-flex align-items-center text-warning">
                                        <span class="material-symbols-outlined fs-6" style="font-variation-settings:'FILL' 1">star</span>
                                        <span class="material-symbols-outlined fs-6" style="font-variation-settings:'FILL' 1">star</span>
                                        <span class="material-symbols-outlined fs-6" style="font-variation-settings:'FILL' 1">star</span>
                                        <span class="material-symbols-outlined fs-6" style="font-variation-settings:'FILL' 1">star</span>
                                        <span class="material-symbols-outlined fs-6">star_half</span>
                                        <span class="ms-2 small text-secondary">(8.9)</span>
                                    </div>
                                </td>
                                @*ESTRENO*@
                                <td class="text-light">@item.FechaLanzamiento.Year</td>

                                <td class="text-end pe-1">
                                    @*ACCIONES*@
                                    <div class="btn-group btn-group-sm">

                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary border-0 text-white-50 btn-icon" title="Editar"><span class="material-symbols-outlined fs-5">Edit</span></a> |
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary border-0 text-white-50 btn-icon" title="Detalles"><span class="material-symbols-outlined fs-5">visibility</span></a> |
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger border-0 text-danger btn-icon" title="Borrar"><span class="material-symbols-outlined fs-5">delete</span></a>

                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>

            <!-- Paginado -->
            <div class="d-flex justify-content-center pb-4 pagination-footer">
                <nav aria-label="Page navigation">
                    <ul class="pagination pagination-sm pagination-glass mb-0">
                        @{
                            var current = ViewBag.CurrentPage as int? ?? 1;
                            var total = ViewBag.TotalPages as int? ?? 1;

                            int start = Math.Max(1, current - 2);
                            int end = Math.Min(total, current + 2);


                        }

                        <!-- Anterior (icono) -->
                        <li class="page-item @(current <= 1 ? "disabled" : "")">
                            <a class="page-link"
                               asp-controller="Pelicula"
                               asp-action="Index"
                               asp-route-page="@(current - 1)"
                               asp-route-txtBusqueda="@busquedaPelicula"
                               asp-route-generoId="@generoId"
                               asp-route-plataformaId="@plataformaId"
                               aria-label="Anterior">
                                <span class="material-symbols-outlined">chevron_left</span>
                            </a>
                        </li>

                        <!-- Primera + puntos si hace falta -->
                        @if (start > 1)
                        {
                            <li class="page-item">
                                <a class="page-link"
                                   asp-controller="Pelicula"
                                   asp-action="Index"
                                   asp-route-page="1"
                                   asp-route-txtBusqueda="@busquedaPelicula"
                                   asp-route-generoId="@generoId"
                                   asp-route-plataformaId="@plataformaId">1</a>
                            </li>

                            @if (start > 2)
                            {
                                <li class="page-item disabled">
                                    <span class="page-link page-link-dots">…</span>
                                </li>
                            }
                        }

                        <!-- Ventana de páginas -->
                        @for (int i = start; i <= end; i++)
                        {
                            <li class="page-item @(i == current ? "active" : "")">
                                <a class="page-link"
                                   asp-controller="Pelicula"
                                   asp-action="Index"
                                   asp-route-page="@i"
                                   asp-route-txtBusqueda="@busquedaPelicula"
                                   asp-route-generoId="@generoId"
                                   asp-route-plataformaId="@plataformaId">@i</a>
                            </li>
                        }

                        <!-- Puntos + última si hace falta -->
                        @if (end < total)
                        {
                            @if (end < total - 1)
                            {
                                <li class="page-item disabled">
                                    <span class="page-link page-link-dots">…</span>
                                </li>
                            }

                            <li class="page-item">
                                <a class="page-link"
                                   asp-controller="Pelicula"
                                   asp-action="Index"
                                   asp-route-page="@total"
                                   asp-route-txtBusqueda="@busquedaPelicula"
                                   asp-route-generoId="@generoId"
                                   asp-route-plataformaId="@plataformaId">@total</a>
                            </li>
                        }

                        <!-- Siguiente (icono) -->
                        <li class="page-item @(current >= total ? "disabled" : "")">
                            <a class="page-link"
                               asp-controller="Pelicula"
                               asp-action="Index"
                               asp-route-page="@(current + 1)"
                               asp-route-txtBusqueda="@busquedaPelicula"
                               asp-route-generoId="@generoId"
                               asp-route-plataformaId="@plataformaId"
                               aria-label="Siguiente">
                                <span class="material-symbols-outlined">chevron_right</span>
                            </a>
                        </li>

                    </ul>
                </nav>

            </div>

        </div>
    </div>
</div>